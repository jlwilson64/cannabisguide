<p id="notice"><%= notice %></p>

<h1>Listing Stores</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.phone %></td>
        <td><%= store.website %></td>
        <td><%= link_to 'Show', store, class: "btn btn-link"  %></td>
        <td><%= link_to 'Edit', edit_store_path(store), class: "btn btn-link"  %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path, class: "btn btn-link"  %>
