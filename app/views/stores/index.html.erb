<% title 'Find Marijuana Retail Stores' %>


<div class="jumbotron">
  <h2>The best way to find great area marijuana retail stores</h2>
  <h3>Explore favorite retail stores, smoke shops, and dispensaries in your area.<br>
    Leave reviews and ratings for your fellow cannabis lovers</h3>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store %></td>
        <td><%= store.address %></td>
        <td><%= store.phone %></td>
        <td><%= link_to store.website, store.website, class: "btn btn-link" %></td>
          <% if user_signed_in? && current_user.admin? %>
            <td><%= link_to 'Edit', edit_store_path(store), class: "btn btn-link"  %></td>
            <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Store', new_store_path, class: "btn btn-link"  %>
<% end %>

